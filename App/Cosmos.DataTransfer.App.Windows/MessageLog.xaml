<UserControl x:Class="Cosmos.DataTransfer.App.Windows.MessageLog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Cosmos.DataTransfer.App.Windows"
             xmlns:common="clr-namespace:Cosmos.DataTransfer.Ui.Common;assembly=Cosmos.DataTransfer.Ui.Common"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type={x:Type local:LogViewModel}}">
    <Grid x:Name="LayoutRoot">
        <FlowDocumentScrollViewer x:Name="DocumentScroll" Document="{Binding Document}"
                                  Background="Black">
        </FlowDocumentScrollViewer>
    </Grid>
</UserControl>
